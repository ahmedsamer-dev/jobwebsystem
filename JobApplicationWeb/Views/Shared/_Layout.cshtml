<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Job App System</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        :root {
            --dark-bg: #000;
            --dark-bg-soft: #2c2c2c;
            --text-light: #f8f9fa;
            --text-muted: #adb5bd;
            --danger: #dc3545;
            --danger-light: #ffb3b3;
            --border: #dee2e6;
        }

        html, body {
            height: 100%;
        }

        body {
            display: flex;
            flex-direction: column;
            font-family: 'Segoe UI', Arial, sans-serif;
            background-color: #f8f9fa;
        }

        /* ================= NAVBAR ================= */
        .navbar {
            background: linear-gradient(135deg, var(--dark-bg), var(--dark-bg-soft));
            box-shadow: 0 2px 10px rgba(0,0,0,.25);
        }

        .navbar-brand {
            font-weight: 700;
            color: var(--text-light) !important;
        }

        .navbar-nav .nav-link {
            color: var(--text-muted) !important;
            position: relative;
            margin: 0 .4rem;
            transition: color 0.3s ease;
            padding-bottom: .4rem;
        }

        /* Underline animation for regular links (Jobs, Login, My Applications, Admin Dashboard) */
        .navbar-nav .nav-link:not(.nav-register):not(.nav-logout)::after {
            content: "";
            position: absolute;
            left: 0;
            bottom: 0;
            width: 0;
            height: 2px;
            background: var(--text-light);
            transition: width 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        }

        .navbar-nav .nav-link:not(.nav-register):not(.nav-logout):hover,
        .navbar-nav .nav-link:not(.nav-register):not(.nav-logout).active {
            color: var(--text-light) !important;
        }

        .navbar-nav .nav-link:not(.nav-register):not(.nav-logout):hover::after,
        .navbar-nav .nav-link:not(.nav-register):not(.nav-logout).active::after {
            width: 100%;
        }

        /* Register button - no underline animation */
        .nav-register {
            border: 1px solid var(--text-light);
            border-radius: 20px;
            padding: 0.35rem 1.2rem !important;
            color: var(--text-light) !important;
            transition: all 0.3s ease;
        }

        .nav-register:hover {
            background: var(--text-light);
            color: #000 !important;
        }

        /* Logout - warning style, no underline animation */
        .nav-logout {
            color: var(--danger-light) !important;
            transition: color 0.3s ease;
        }

        .nav-logout:hover {
            color: var(--danger) !important;
        }

        main {
            flex: 1;
            padding: 2rem 0;
        }

        footer {
            border-top: 1px solid var(--border);
            padding: 1.5rem 0;
            text-align: center;
            color: #6c757d;
        }
    </style>
</head>

<body>
    @{
        var controller = ViewContext.RouteData.Values["controller"]?.ToString();
    }

    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" asp-controller="Jobs" asp-action="Index">
                Job App System
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="nav">
                <ul class="navbar-nav ms-auto align-items-lg-center">

                    <li class="nav-item">
                        <a class="nav-link @(controller == "Jobs" ? "active" : "")"
                           asp-controller="Jobs" asp-action="Index">Jobs</a>
                    </li>

                    @if (Context.Session.GetInt32("UserId") != null)
                    {
                        <li class="nav-item">
                            <a class="nav-link @(controller == "Applications" ? "active" : "")"
                               asp-controller="Applications" asp-action="MyApplications">
                                My Applications
                            </a>
                        </li>

                        @if (Context.Session.GetString("UserRole") == "Admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link @(controller == "Admin" ? "active" : "")"
                                   asp-controller="Admin" asp-action="Index">
                                    Admin Dashboard
                                </a>
                            </li>
                        }

                        <li class="nav-item">
                            <a class="nav-link nav-logout"
                               asp-controller="Account" asp-action="Logout">
                                Logout
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link @(controller == "Account" ? "active" : "")"
                               asp-controller="Account" asp-action="Login">
                                Login
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link nav-register"
                               asp-controller="Account" asp-action="Register">
                                Register
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <main class="container">
        @RenderBody()
    </main>

    <footer>
        <div class="container">
            &copy; 2026 Job App System. All rights reserved.
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
